<!DOCTYPE html>
<html>
  <head>
    <title>TreasureHunt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="main-header">
      <h1>Treasure Hunt</h1>

      <% if current_user %>
        <div class="main-header__current-session">
          <div>Logged in as <%= current_user.email %>.</div>
          <div><%= button_to "Logout", sessions_path, method: :delete %></div>
        </div>
      <% end %>
    </div>

    <% if flash.any? %>
      <div>
        <% flash.each do |key, value| %>
          <div class="flash flash-<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
