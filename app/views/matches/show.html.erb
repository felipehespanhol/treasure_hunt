<h2>Match <%= @match.id %></h2>

<table class="ranking-table">
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Distance</th>
    </tr>
  </thead>

  <% @match.guesses.order(distance: :asc).each_with_index do |guess, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= guess.user.email %></td>
      <td><%= guess.distance %></td>
    </tr>
  <% end %>
</table>

<div class="play-again-fields">
  <%= link_to 'Play again!', new_guess_path %>
</div>
